<style>
.modal{
    display: flex;
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */ 

}
  
.modal-content{
  display: flex;
  background-color: #fefefe;
  margin: 15% auto; /* 15% from the top and centered */
  padding: 0px;
  border: 1px solid #888;
  width: 80%; /* Could be more or less, depending on screen size */
  height: 559px;
  max-width: 800px;
  max-height: 90vh;
  position: relative;

}
  
.desktop{ width: 50%; max-height: 559px }
.mobile{ width: 100%; max-height: 400px }
.brightGreen{ 
  color: #61e020;
}
.boldText{ font-weight: bold;}
  
#words{
  display: flex; 
  flex-direction: column; 
  justify-content: space-around; 
  align-items: center; 
  background: white;
  padding: 10px;
/*   background-image: url("https://ak9.picdn.net/shutterstock/videos/13070399/thumb/3.jpg"); */
  background-size: cover;
}
  
#closeModal {
    padding: 0;
  position: absolute;
  top: -25px;
  right: 0px;
  color: gray;
  font-size: 45px;
  font-weight: bold;
  cursor: default;  
}

</style>

<!--begin html -->

<div id="myModal" class="modal">
  
  <!-- Modal content -->
  <div class="modal-content">  
    <div id="closeModal" >&times;</div>
    <div style="display: flex; flex-wrap: wrap">
    	<div id="image1" class="mobile" >
    		<img style="width: 100%; height: auto" 
            src="https://cdn.shopify.com/s/files/1/0086/4586/9668/products/HTB17nY0bu3tHKVjSZSgq6x4QFXau_2048x.jpg?v=1556404303">
    	</div>
		<div id="words">
		  <div>
          <h1 style="text-align: center; font-family: Abel, sans-serif; font-size: 5em; font-weight: bold; margin: 5px"><span class="brightGreen boldText">30%</span>OFF</h1>
		  <div style="color: white; background-color: #f442aa; padding: 5px" >
          	<div style="text-align: center; font-family: Abel, sans-serif; font-size: 2em; font-weight: bold">She's worth every cent!</div>
          </div>
          <div style="width: 100%; padding: 20px 0 20px 0">
            <div style="text-align: left; font-family: Abel, sans-serif; font-size: 1.5em; font-weight: normal; line-height: 1.1em">*ALL SITEWIDE, </div>
            <div style="text-align: left; font-family: Abel, sans-serif; font-size: 1.5em; font-weight: normal; line-height: 1.1em">NO MINIMUM ORDER</div>
          </div>
          <div style="padding: 20px; text-align: center">
          	<button id="claimCouponButton" style="height: 60px; width: 250px; font-size: 2em; font-weight: normal; color: white; background: orange">Claim Coupon</button>
          </div>
          </div>
          
          </div>
    </div>
    
<!--begin JS-->
  
<script>
var modal = document.getElementById('myModal');


// Get the <span> element that closes the modal
var closeModalButton = document.getElementById("closeModal");
var claimCouponButton = document.getElementById("claimCouponButton");
// When the user clicks on <span> (x), close the modal
closeModalButton.onclick = function() {
  modal.style.display = "none";
}

claimCouponButton.onclick = function(){
  modal.style.display="none"
  //also need to set the discount in the cart
}
// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}



function setSize(){
    if($(window).width() > 1000) {
        $('#image1').addClass('desktop');
        $('#image1').removeClass('mobile');
        $('#words').addClass('desktop');
        $('#words').removeClass('mobile');
    }
    else {
        $('#image1').addClass('mobile');
        $('#image1').removeClass('desktop');
        $('#words').addClass('mobile');
        $('#words').removeClass('desktop');
    }
}
  
  $(window).on('resize', function () {
    setSize()})

  setSize()
  
  </script>
  
</div>

